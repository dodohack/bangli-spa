{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "outDir": "./tmp",
    "rootDir": "./app",
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "node",
      "hammerjs"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "genDir": ".",
    "entryModule": "app/app.module.ts#BangliSpaModule",
    "debug": false
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "**/*.ngfactory.ts",
    "**/*.shm.ts",
    "app/main*.ts",
    "app/polyfill.ts"
  ]
}
